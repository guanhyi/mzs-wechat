.assemble .item{
    background: #ffffff;
    margin-bottom: 5px;
    position: relative;
}
.assemble  .title{
    margin: 0;
    font-size: 16px;
    display: block;
   padding-bottom: 8px;
}
.assemble-detail{
    padding: 8px 15px;
}
.assemble  .t1{
    font-size: 14px;
    color: #ff0434;
    padding-bottom: 8px;
}
.assemble image{
    margin-right: 30rpx;
    height:80rpx;
    width: 80rpx;
    border-radius: 80rpx;
    overflow: hidden;
    border-width: 4rpx;
    border-style: solid;
    border-color: rgba(100, 100, 100, 1);
}
.assemble .tk{
    display: flex;
    justify-content: space-between;
}
.assemble .tk-btn{
    display: block;
	padding: 20rpx 40rpx;
	font-size: 28rpx;
	color: #ffffff;
	background-color: #f21f0f;
	border-radius: 10rpx;
	position: absolute;
	bottom: 10rpx;
	right: 10rpx;
	line-height: 100%;
}