.share-bg {
    background-color: #FA253E;
    height: 100vh;
    position: relative;
    z-index: 999;
}

.share-sub {
    color: white;
    text-align: center;
    font-size: 28rpx;
    padding-top: 20rpx;
}

.share-box {
    background-color: white;
    border: 1px solid #fff;
    padding: 20rpx 28rpx;
    margin: 0 30rpx;
    border-radius: 10rpx;
    margin-top: 20rpx;
    display: flex;
}

.share-box image {
    /* width: 250rpx; */
    height: 200rpx;
    margin-right:20rpx;
}

.info {
    margin-top: -20rpx;
    /* display: block; */
    font-size: 23rpx;
    width:330rpx;
    display: -webkit-box;
    overflow: hidden;
    text-overflow: ellipsis;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 4;
    height: 120rpx;
}

.label {
    overflow: initial;
}

.share-price {
    color: red;
    font-size: 40rpx;
}

.share-realPrice {
    color: #999;
    text-decoration: line-through;
}

.share-time {
    border: 2px solid #F87387;
    padding: 5rpx 10rpx;
    color: #FA253E;
}

.share-people {
    background-color: white;
    padding: 20rpx;
    margin-top: 30rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.share-avaterList {
    display: flex;
    align-items: center;
    justify-content: center;
}

.share-next {
    margin-right: 20rpx;
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    background: #FDDCDD;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 60rpx;
    color: #F87387;
}

.share-avaterList image {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    margin: 0 20rpx;
}

.share-videoCount {
    color: #F87387;
}

.share-downtime {
    margin-top: 30rpx;
    display: flex;
    align-items: center;
}

.share-downtime-time {
    display: flex;
}

.share-downtime .t-count-down {
    margin: 0 20rpx;
}

.share-ht {
    width: 100rpx;
    height: 6rpx;
    background: #e6e6e6;
    margin: 0 20rpx;
}

.userInfo {
    display: flex;
    justify-content: space-between;
    font-size: 26rpx;
    align-items: center;
    width: 100%;
}

.userInfo image {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    margin: 0 20rpx;
}

.userInfo .k {
    margin-left: 20rpx;
}

.userInfo .flex {
    align-items: center;
}

.share-context {
    margin-top: 30rpx;
    background: white;
}

.share-cell {
    display: flex;
    justify-content: space-between;
    padding: 30rpx;
    border-bottom: 2rpx solid #eee;
    font-size: 30rpx;
}

.share-cell-value {
    color: #999;
}

.share-btns {
    display: flex;
}

.share-btn {
    height: 150rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #FF4966;
    border-radius: 0 !important;
    color: white;
    width: 100%;
}

.share-footer {
    padding: 50rpx 30rpx;
    display: flex;
    font-size: 22rpx;
    justify-content: space-between;
}

.share-footer-icon {
    display: flex;
    align-items: center;
    width: 22%;
}

.share-footer-icon .t-icon {
    color: #F87387;
    margin-right: 10rpx;
}