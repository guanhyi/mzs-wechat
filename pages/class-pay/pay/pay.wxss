.pay {
    padding: 16rpx 0;
}

.switch-block {
    width: 300rpx;
    height: 56rpx;
    background: #eeeeee;
    border-radius: 26rpx;
    margin: 0 auto 0;
    display: flex;
    font-size: 30rpx;
    border: 4rpx solid #eeeeee;
}

.switch-block .span {
    display: flex;
    justify-content: center;
    align-items: center;
    flex: 1;
    color: #bbbbbb;
}

.switch-block .active {
    background: #5acfcb;
    border-radius: 180rpx;
    transition: 0.3 all;
    color: #ffffff;
}

.pay-address-title {
    margin-top: 32rpx;
    margin-bottom: 6rpx;
    padding-left: 32rpx;
    padding-right: 32rpx;
    color: rgba(0, 0, 0, .5);
    font-size: 28rpx;
}

.pay-address {
    background-color: #fff;
    font-size: 34rpx;
    padding: 32rpx;
    border: 1rpx solid rgba(0, 0, 0, .1);
}

.textarea {
    border: 1rpx solid rgba(0, 0, 0, .1);
    height: 324rpx;
}

.cell {
    border: 1rpx solid rgba(0, 0, 0, .1);
}

.buy-group-cancel {
    position: fixed;
    bottom: 48rpx;
    border-radius: 48rpx;
    width: 80%;
    left: 0;
    right: 0;
    margin: 0 auto;
    max-width: 800rpx;
    height: 90rpx;
    line-height: 90rpx;
    font-size: 32rpx;
    overflow: hidden;
    text-align: center;
    color: #ffffff;
    background-color: #5acfcb;
    display: flex;
    box-shadow: 0 4rpx 10rpx 0 rgba(0, 0, 0, 0.1);
}

.buy-item-cancel {
    width: 200rpx;
    font-size: 32rpx;
}
.buy-item{
    flex: 1;
	border-radius: 48rpx;
	display: flex;
	flex-direction: column;
	position: relative;
	line-height: 1.1;
	font-size: 34rpx;
	justify-content: center;
	align-items: center;
	background-image: linear-gradient(to left, #ff0434, #f7c443);
}
.buy-price {
	font-size: 36rpx;
}
.item-flex{
    font-size: 24rpx;
	padding-top: 4rpx;
}