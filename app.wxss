page {
  background: #f7f7f7;
  width: 100%;
}

.demo {
  padding-bottom: 56rpx;
}
.demo-title {
  font-size: 48rpx;
  font-weight: 700;
  line-height: 64rpx;
  margin: 48rpx 32rpx 0;
  color: var(--td-font-gray-1, rgba(0, 0, 0, 0.9));
}
.demo-desc {
  font-size: 28rpx;
  color: var(--td-font-gray-2, rgba(0, 0, 0, 0.6));
  margin: 16rpx 32rpx 0;
  line-height: 44rpx;
}


/*
* 组件样式
*/
.btn{
    background-color: #5acfcb !important;
    color: #fff !important;
}
.input{
    border: 2rpx solid rgba(220,220,220,1);
    border-radius: 12rpx;
  margin-bottom: 20rpx;
}
.no-reply{
    position: absolute;
    left: 0;
    right: 0;
    margin: 0 auto;
    top: calc(50% - 25px);
    font-size: 25px;
    line-height: 25px;
    color: #dedede;
    text-align: center;
}
.flex{
    display: flex;
}
.item-center{
    align-items: center;
}
.mt-20rpx{
    margin-top: 20rpx
}